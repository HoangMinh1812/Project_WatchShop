<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    >

    <ImageView
        android:id="@+id/imgDM"
        android:layout_width="160dp"
        android:layout_height="160dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tvIdDM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/imgDM"
        app:layout_constraintEnd_toEndOf="@+id/imgDM"
        app:layout_constraintStart_toStartOf="@+id/imgDM"
        app:layout_constraintTop_toTopOf="@+id/imgDM" />

    <TextView
        android:id="@+id/tvTenDM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loại danh mục"
        android:textColor="@color/teal_200"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgDM" />

</androidx.constraintlayout.widget.ConstraintLayout>